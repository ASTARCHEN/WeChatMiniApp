.userinfo {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
  background-color: #fff;
  width: 100%;
  height: 300rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}
.item {
    width: 100%;
    height: 100rpx;
    box-sizing: border-box;
    padding: 20rpx;
    margin-bottom: 20rpx;
    background-color: #fff;
}
